@model WeatherService.Models.WeatherStation

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Edit Station";
}

<div class="container">
    <h1>Edit Station</h1>

    <form action="/WeatherStations/Update" method="post">
        @Html.Partial("~/Views/Shared/StationForm.cshtml", Model)

        <div class="form-group row">
            <div class="col-10">
                <button type="submit" class="btn btn-primary">Save changes</button>
                <a class="btn btn-secondary" href="/WeatherStations">Cancel</a>
            </div>
        </div>
    </form>
</div>