@model WeatherService.Models.View.UserProfile

@if (Model.Username.Equals("Admin"))
{
    @Html.HiddenFor(m => m.Username)
}
else
{
    <div class="form-group row">
        <label asp-for="Name" class="col-2 col-form-label">Username</label>
        <div class="col-10">
            @Html.EditorFor(m => m.Username, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.Username, string.Empty, new { @class = "text-danger" })
        </div>
    </div>
}

<div class="form-group row">
    <label asp-for="Password" class="col-2 col-form-label">Password</label>
    <div class="col-10">
        <input type="password" class="form-control" name="Password" />
    </div>
</div>

<div class="form-group row">
    <label asp-for="Name" class="col-2 col-form-label">Email</label>
    <div class="col-10">
        @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(m => m.Email, string.Empty, new { @class = "text-danger" })
    </div>
</div>

@if (!Model.Username.Equals("Admin"))
{
    <div class="form-group row">
        <label asp-for="Name" class="col-2 col-form-label">User is admin?</label>
        <div class="col-10">
            @Html.CheckBoxFor(m => m.IsAdmin, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
}

@Html.HiddenFor(m => m.Id)

@if (!string.IsNullOrEmpty(ViewBag.ValidationError))
{
    <div class="form-group row">
        <div class="col-10">
            <span class="text-danger">@ViewBag.ValidationError</span>
        </div>
    </div>
}