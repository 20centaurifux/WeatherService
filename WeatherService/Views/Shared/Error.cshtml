@model WeatherService.Models.View.HttpError

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Oops!";

    <style type="text/css">
        .error-template
        {
            padding: 40px 15px;
            text-align: center;
        }

        .error-actions
        {
            margin-top: 15px;
            margin-bottom: 15px;
        }

        .error-actions .btn
        {
            margin-right: 10px;
        }
    </style>

    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="error-template">
                    <h1>
                        Oops!
                    </h1>
                    
                    <h2>
                        That shouldn't have happened.
                    </h2>
                    
                    <div class="error-details">
                        Sorry, an error has occured: <span class="text-danger">@Model.Message</span>
                    </div>

                    <div class="error-actions">
                        <a href="/" class="btn btn-primary btn-lg">
                            <span class="glyphicon glyphicon-home"></span>
                            Take Me Home
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}