@model WeatherService.Models.View.UserProfile

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Edit User Account";
}

<div class="container">
    <h1>Edit User Account</h1>

    <form action="/Accounts/Update" method="post">
        @Html.Partial("~/Views/Shared/AccountForm.cshtml", Model)

        <div class="form-group row">
            <div class="col-10">
                <button type="submit" class="btn btn-primary">Save changes</button>
                <a class="btn btn-secondary" href="/Accounts">Cancel</a>
            </div>
        </div>
    </form>
</div>